@model TaskMaster.Models.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Register User";
}


<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.Id != 0)
        {
            //edit
            title = "Edit User";

        }
        <div class="col-12 border-bottom">
            <h1 class="text-primary">@title</h1>
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"> </span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"> </span>
        </div>
        @*<div class="form-group row">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"> </span>
        </div>*@
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"> </span>
        </div>
        <div class="form-group">
            <label asp-for="AccessLevel"></label>
            @Html.DropDownListFor(n => n.AccessLevel,
               new SelectList(Enum.GetValues(typeof(User.AccessList))),
               "Select AccessLevel",
               new { @class = "form-control" })
            <span asp-validation-for="AccessLevel" class="text-danger"> </span>
        </div>

        <div class="form-group">

            <label asp-for="Dept"></label>

            @Html.DropDownListFor(n => n.Dept,
                 new SelectList(Enum.GetValues(typeof(User.DeptList))),
                 "Select Department",
                 new { @class = "form-control" })
            <span asp-validation-for="Dept" class="text-danger"> </span>
        </div>

        <div class="form-group row">
            <div class="col-8 offset-4">
                @if (Model.Id != 0)
                {
                    <partial name="_EditAndBackToListButton" model="Model.Id" />
                }
                else
                {
                    <partial name="_CreateAndBackToListButton" />
                }
            </div>
        </div>
    </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

