@model TaskMaster.Models.ViewModels.GantryVM
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create Gantry";
}

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.Gantry.Id != 0)
        {
            //edit
            title = "Edit Gantry";
            <input type="hidden" asp-for="Gantry.Id" />
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">

            <div class="form-group row">
                <div class="col-4">
                    Gantry
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Gantry.CarparkID, Model.CarparkList, "Select Carpark",
                   new { @class = "form-control" } )
                    <span asp-validation-for="Gantry.CarparkID" class="text-danger"> </span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Gantry.Description"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Gantry.Description" class="form-control" autofocus/>
                    <span asp-validation-for="Gantry.Description" class="text-danger"> </span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.Gantry.Id != 0)
                    {
                        <partial name="_EditAndBackToListButton" model="Model.Gantry.Id" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

